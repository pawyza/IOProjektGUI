<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane id="AnchorPane" prefHeight="200.0" prefWidth="550.0" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/8.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.AddTitleRecordController">
    <stylesheets>
        <URL value="@/Resources/Theme.css" />
    </stylesheets>
   <children>
      <VBox prefHeight="200.0" prefWidth="550.0">
         <children>
            <HBox alignment="CENTER" prefHeight="50.0" prefWidth="550.0" spacing="10.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Number:" />
                  <TextField fx:id="numberField" prefHeight="26.0" prefWidth="60.0" />
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Title:" />
                  <TextField fx:id="titleField" />
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Author:" />
                  <TextField fx:id="authorField" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="50.0" prefWidth="550.0" spacing="10.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Genre:" />
                  <TextField fx:id="genreField" />
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Cast:" />
                  <TextField fx:id="castField" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="50.0" prefWidth="550.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#on_Add" text="Add" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="50.0" prefWidth="550.0">
               <children>
                  <Text fx:id="infoField" strokeType="OUTSIDE" strokeWidth="0.0" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
